<Window x:Class="notepad_wpf.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notepad_wpf"
        mc:Ignorable="d"
        Title="Window1" Height="150" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Font Size:"/>
            <TextBox x:Name="fontSizeTextBox" Margin="0,5,0,10"/>
            <CheckBox Content="Bold" x:Name="boldCheckBox"/>
            <CheckBox Content="Italic" x:Name="italicCheckBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Click="OKButton_Click" Margin="0,0,5,0"/>
                <Button Content="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
